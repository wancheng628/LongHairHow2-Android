<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:background="#00000000" >
    
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:alpha="0.9"
        android:gravity="center_vertical|center_horizontal" >

        <RelativeLayout
            android:id="@+id/layout_policy"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:background="@drawable/sharonblainbutton" >

            <ImageView
                android:id="@+id/imgPhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:scaleType="fitStart"
                android:src="@drawable/default_user_icon" />

            <Button
                android:id="@+id/btnTakePhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgPhoto"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="17dp"
                android:background="#00000000"
                android:text="take a photo"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/btnChoosePhotoFromLibrary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnTakePhoto"
                android:layout_centerHorizontal="true"
                android:background="#00000000"
                android:text="choose from library"
                android:textColor="#ffffff" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layout_accept"
            android:layout_width="240dp"
            android:layout_height="30dp"
            android:layout_below="@id/layout_policy"
            android:layout_marginTop="10dp"
            android:background="@drawable/sharonblainnextbutton"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/label_final_step"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:background="#00000000"
                android:ellipsize="end"
                android:gravity="left|center_vertical"
                android:lines="1"
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="FINAL STEP"
                android:textColor="#ffffff"
                android:textColorHint="#dddddd" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
