<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <GridView
        android:id="@+id/grid_view2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:listSelector="#00000000"
        android:numColumns="4"
        android:overScrollMode="never"
        android:stretchMode="columnWidth" >
    </GridView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/layout_sharon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal" >

            <ImageView
                android:id="@+id/img_sharon"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:alpha="0.9"
                android:clickable="true"
                android:src="@drawable/btn_more" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:weightSum="20" >

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="17"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="160dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/sharon_icon" />

                    <TextView
                        android:id="@+id/label_sharon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Sharon Blain has created a range of products to simplify the way you work with long hair. Use these products together with her books and DVDs and you will be creating hair masterpieces in minutes."
                        android:textColor="#ffffff"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_weight="3"
                    android:gravity="center_horizontal"
                    android:text=">"
                    android:textColor="#ffffff"
                    android:textSize="40sp"
                    android:typeface="sans" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_goldwell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:gravity="center_vertical|center_horizontal" >

            <ImageView
                android:id="@+id/img_gold"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:alpha="0.9"
                android:clickable="true"
                android:src="@drawable/btn_more" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:weightSum="20" >

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="17"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="160dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/goldwell_icon" />

                    <TextView
                        android:id="@+id/label_goldwell"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Our sponsor Goldwell: an international salon-only focused company, dedicated to providing professional hairdressers with the very best in products, service and support."
                        android:textColor="#ffffff"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_weight="3"
                    android:gravity="center_horizontal"
                    android:text=">"
                    android:textColor="#ffffff"
                    android:textSize="40sp"
                    android:typeface="sans" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_capps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:gravity="center_vertical|center_horizontal" >

            <ImageView
                android:id="@+id/img_capps"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:alpha="0.9"
                android:clickable="true"
                android:src="@drawable/btn_more" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:weightSum="20" >

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="17"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="160dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/capps_icon" />

                    <TextView
                        android:id="@+id/label_capps"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Our amazing app developers! Bespoke design &amp; development of iPhone &amp; iPad apps; Excellent business apps that are affordable &amp; self-manageable. -- connectedapps.com.au -- +61 (02) 9389 1220"
                        android:textColor="#ffffff"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_weight="3"
                    android:gravity="center_horizontal"
                    android:text=">"
                    android:textColor="#ffffff"
                    android:textSize="40sp"
                    android:typeface="sans" />
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>