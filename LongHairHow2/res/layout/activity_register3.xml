<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:background="#00000000" >
    
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:alpha="0.9"
        android:gravity="center_vertical|center_horizontal" >

        <RelativeLayout
            android:id="@+id/layout_policy"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:background="@drawable/sharonblainbutton" >

            <TextView
                android:id="@+id/label_policy"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:scrollbars="vertical"
                android:text="TextView" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layout_accept"
            android:layout_width="240dp"
            android:layout_height="44dp"
            android:layout_below="@id/layout_policy"
            android:layout_marginTop="10dp"
            android:background="@drawable/accept_button"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/label_final_step"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:background="#00000000"
                android:ellipsize="end"
                android:gravity="left|center_vertical"
                android:lines="1"
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="I ACCEPT"
                android:textColor="#ffffff"
                android:textColorHint="#dddddd" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
